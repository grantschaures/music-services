{
    "version": 2,
    "builds": [
      {
        "src": "index.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      { "src": "/index", "dest": "/index.html" },
      { "src": "/search", "dest": "/search.html" },
      { "src": "/update", "dest": "/update.html" },
      { "src": "/delete", "dest": "/delete.html" },
      { "src": "/add", "dest": "/add.html" },
      { "src": "/list", "dest": "/list.html" },
      { "src": "/api/songs", "dest": "index.js" },
      { "src": "/(.*)", "dest": "/index.html" }
    ],
    "env": {
      "MONGODB_URI": "your-mongodb-uri"
    }
}
  